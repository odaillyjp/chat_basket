.header
  %p= @current_user.name

.room{ data: { 'room-id': @room.id } }
  %h1= @room.name

  .room__members
    %h2 参加者
    - @room.members.each do |member|
      %p= member.name

  .room__messages
    %h2 チャット

    = render 'messages/messages', room: @room
    = render 'messages/new', room: @room

    %div{ class: hiding_bem_class("room__new-game", !@room.waiting?) }
      = render 'games/new', room: @room
